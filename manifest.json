{
  "name": "LinkedIn Filters Extended",
  "description": "This extension enables powerful filters on LinkedIn Jobs search results.",
  "manifest_version": 3,
  "version": "1.0.1",
  "icons": {
    "96": "assets/li+iconNew.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
